services:
    main:
        build:
            context: src
            dockerfile: Dockerfile
        ports:
            - port: 8080
              protocol: tcp # Alternatively, http is supported
        environment:
            FAKEFLAG: "{{ genFakeFlag() }}"
            FLAG: {{ flag }}
        mounts:
            data:
                data/subdir: /data
            tmp_dirs:
                - /test-tmp

volumes:
    data:
        size: 50MiB

metadata:
    name: "Hello World Challenge"
    description_md: |
        A simple hello world challenge to get you started.
        Visit [this page](https://example.com) to learn more.
    difficulty: "easy"
    difficulty_color_hex: #800080
    base_points: 100
    category: "intro"
    authors:
        - Aaron
        - Plfanzen
    flag: PLFANZEN{TEST}
