services:
    main:
        build:
            context: src
            dockerfile: Dockerfile
        image: traefik/whoami
        ports:
            - port: 80
              protocol: http # Alternatively, http is supported
        environment:
            FAKEFLAG: "{{ genFakeFlag() }}"
            FLAG: "PLFANZEN{TEST}"
            ACTOR: {{ actor }}
        mounts:
            data:
                data/subdir: /data
            tmp_dirs:
                - /test-tmp

volumes:
    data:
        size: 50MiB

metadata:
    name: "Hello World Challenge"
    description_md: |
        A simple hello world challenge to get you started.
        Visit [this page](https://example.com) to learn more.
    difficulty: "easy"
    difficulty_color_hex: #800080
    base_points: 100
    categories:
        - misc
    difficulty: easy
    authors:
        - Aaron
        - Plfanzen
    flag: PLFANZEN{TEST}
